<div class="section">
  <div class="card-panel">
    <h4 class="header2"><%= plural_table_name.titleize %></h4>

    <table class="bordered responsive-table">
      <thead>
        <tr>
    <% attributes.reject(&:password_digest?).each do |attribute| -%>
          <th><%= attribute.human_name %></th>
    <% end -%>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%% if @<%= plural_table_name %>.count != 0 %>
          <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
            <tr>
      <% attributes.reject(&:password_digest?).each do |attribute| -%>
              <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
      <% end -%>
              <td>
                <%%= link_to <%= singular_table_name %>,
                    class: 'btn-floating btn-small waves-effect waves-light teal' do %>
                  <i class="material-icons">search</i>
                <%% end %>
                <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>),
                    class: 'btn-floating btn-small waves-effect waves-light blue' do %>
                  <i class="material-icons">mode_edit</i>
                <%% end %>
                <%%= link_to <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'btn-floating btn-small waves-effect waves-light red', id: 'btn-submit' do %>
                  <i class="material-icons">delete</i>
                <%% end %>
              </td>
            </tr>
          <%% end %>
        <%% else %>
          <tr><td>No records found</td></tr>
        <%% end %>
      </tbody>
    </table>

    <br>

    <%%= link_to 'New <%= singular_table_name.titleize %>', new_<%= singular_table_name %>_path, class: 'waves-effect waves-light btn' %>

  </div>
</div>